  <script>
    const form = document.getElementById('bookingForm');
    const confirmation = document.getElementById('confirmation');
    const totalPriceEl = document.getElementById('totalPrice');

    const roomRates = {
      'Standard Room': 50,
      'Deluxe Room': 70,
      'Family Suite': 90
    };

    function calculatePrice() {
      const roomType = form.roomtype.value;
      const checkin = new Date(form.checkin.value);
      const checkout = new Date(form.checkout.value);

      if (!roomType || isNaN(checkin) || isNaN(checkout) || checkout <= checkin) {
        totalPriceEl.textContent = '';
        return;
      }

      const nights = Math.ceil((checkout - checkin) / (1000 * 60 * 60 * 24));
      const rate = roomRates[roomType];
      const total = nights * rate;

      totalPriceEl.textContent = `Estimated Total Price: $${total} (${nights} night${nights > 1 ? 's' : ''} @ $${rate}/night)`;
    }

    form.roomtype.addEventListener('change', calculatePrice);
    form.checkin.addEventListener('change', calculatePrice);
    form.checkout.addEventListener('change', calculatePrice);

    form.addEventListener('submit', function(event) {
      event.preventDefault();
      calculatePrice();

      const checkin = new Date(form.checkin.value);
      const checkout = new Date(form.checkout.value);
      if (checkout <= checkin) {
        alert('Check-out date must be after check-in date.');
        return;
      }

      const fullname = form.fullname.value.trim();
      const email = form.email.value.trim();
      const phone = form.phone.value.trim();
      const guests = form.guests
